@model LEARNIT.Models.Photo
@{
    ViewBag.Title = "Upload";
}
<h2>Upload Photo</h2>

@using (Html.BeginForm("UploadImage", "Photo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="form-horizontal">
        <h4>Photo</h4>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">File</label>
            <div class="col-md-10">
                <input type="file" id="file" name="file" accept="image/*" data-filename-placement="inside" required />
                <p class="help-block">Browse File Image</p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Description</label>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="@Url.Content("/Scripts/bootstrap.file-input.js")"></script>
    <script>
        $('input[type=file]').bootstrapFileInput();
        $('.file-inputs').bootstrapFileInput();
    </script>
}
