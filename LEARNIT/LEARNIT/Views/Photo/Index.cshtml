@model IEnumerable<LEARNIT.Models.Photo>
@{
    ViewBag.Title = "Photo";
}
<h2>Photo</h2>
<p>
    @Html.ActionLink("Upload Photo", "Upload")
</p>
<table class="table">
    <tr>
        <th>
            Photo Name
        </th>
        <th>
            Photo
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PhotoName)
            </td>
            <td>
                <img src="@Url.Content(Request.Url.GetLeftPart(UriPartial.Authority))/Upload/Photo/@Html.DisplayFor(modelItem => item.PhotoNameOnServer)" height="120px" />
            </td>
            <td>
                <div class="btn-group">
                    @Html.ActionLink("Edit", "Edit", new { id = item.PhotoID }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Details", "Details", new { id = item.PhotoID }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.PhotoID }, new { @class = "btn btn-default" })
                </div>
            </td>
        </tr>
    }
</table>
