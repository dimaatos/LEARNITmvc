<section class="courses-intro" id="popular-courses">
    <div>
        <h2>Sibscribe for your favorite courses!</h2>
        <h2>
            @using (Html.BeginForm())
            {
            <p>
                 @Html.TextBox("SearchString", null, new { @style = "width: 250px; height: 46px; border-radius:8px; border-color: 2px solid #AAAAAA;" })
                <span><input type="submit" value="Search by name"></span>
            </p>
        }
        </h2>
        
           
@foreach (var item in Model)
{
    <div class="row" id="courses-row">
            <article class="6u 12u$(xsmall) work-item" id="search-dashboard">
                <a href="/Course/Details/@Html.DisplayFor(modelItem  => item.CourseID)" class="image fit thumb">
                    <img src="@Url.Content(Request.Url.GetLeftPart(UriPartial.Authority))/Upload/Photo/@Html.DisplayFor(modelItem => item.Photo.PhotoNameOnServer)" alt="" />
                </a>
                <h3>@Html.DisplayFor(modelItem => item.CourseName)</h3>
                <p><a href="/teacher/details/@Html.DisplayFor(modelItem => item.Teacher.TeacherID)">@Html.DisplayFor(modelItem => item.Teacher.TeacherName)</a></p>
            </article>

        </div>           
}

    </div>
</section>

