@model IEnumerable<LEARNIT.Models.Course>
@{
    Layout = "~/Views/Shared/_LayoutPages.cshtml";
    ViewBag.Title = "Home-LEARNIT";
}


<section class="courses-intro">
    <div id="popular-courses">
        <h2 class="h2-for-catalog">Sibscribe for your favorite courses!</h2>
        <h3 style="vertical-align: middle; text-align:center">
            Browse <strong><a href="/course/ByCategory">Catalog by categories</a></strong> or search <strong><a href="/course/ByName"> by name</a></strong>
        </h3>

        @using (Html.BeginForm())
            {
            <div style="width: 250px; height: 46px; border-radius:8px; border-color: 2px solid #AAAAAA; margin-left: 41%; margin-bottom: 7%;">
                @Html.DropDownList("SelectedTeacher", "All Teachers")
                <span style="margin-left:20%;"><input style=" margin-top: 7%" type="submit" value="Filter"></span>
            </div>
        }

        @foreach (var item in Model)
        {
            <div id="courses-row">
                <div class="row" id="gallery-row">
                    <article class="70u 12u$(xsmall) work-item" id="search-dashboard">
                        <a href="/Course/Details/@Html.DisplayFor(modelItem  => item.CourseID)" class="image fit thumb">
                            <img src="@Url.Content(Request.Url.GetLeftPart(UriPartial.Authority))/Upload/Photo/@Html.DisplayFor(modelItem => item.Photo.PhotoNameOnServer)" alt="" />
                        </a>
                        <h3>@Html.DisplayFor(modelItem => item.CourseName)</h3>
                        <p><a href="/teacher/details/@Html.DisplayFor(modelItem => item.Teacher.TeacherID)">@Html.DisplayFor(modelItem => item.Teacher.TeacherName)</a></p>
                    </article>
                </div>
            </div>
        }
        }

    </div>
</section>
