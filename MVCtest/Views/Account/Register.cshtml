@model MVCtest.Models.RegisterViewModel

@{
    ViewBag.Title = "Sign Up!";
    Layout = "~/Views/Shared/_NavigateLayout.cshtml";
}



@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @id = "profile-form", role = "form" }))
            {

    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })


    <div class="container" id="my-container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <h1 class="text-center login-title">Sign up to LEARNIT</h1>
                <div class="account-wall">
                    <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                         alt="">
                    <form class="form-signin">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password", })
                        <div class="form-group">
                            <input class="btn btn-lg btn-primary btn-block" type="submit" value="Sing Up!" id="my-submit">

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>




}







